{
  "title": {
    "name": "coturn-stun",
    "version": "1.0.0"
  },
  "description": "Coturn STUN/TURN server for WebRTC and real-time communications",
  "source": {
    "container": "docker://coturn/coturn:latest"
  },
  "networking": {
    "forward_ports": [
      ["3478", "3478"],
      ["3479", "3479"],
      ["5349", "5349"],
      ["5350", "5350"]
    ],
    "expose_ports": [
      ["49152", "49152"],
      ["65535", "65535"]
    ],
    "hostname": "?stun_hostname?"
  },
  "storage": {
    "volumes": [
      {
        "name": "config",
        "mountpoint": "/var/lib/coturn",
        "size": "1073741824",
        "recreate": "false",
        "private": "true"
      },
      {
        "name": "logs",
        "mountpoint": "/var/log/coturn",
        "size": "2147483648",
        "recreate": "false",
        "private": "true"
      }
    ]
  },
  "system": {
    "host_pid": "false",
    "host_net": "false",
    "privileged": "false",
    "capabilities": ["NET_BIND_SERVICE"]
  },
  "resources": {
    "cpus": "2",
    "memory": "1024"
  },
  "prompts": [
    {
      "template": "stun_hostname",
      "question": "What hostname should the STUN server use?",
      "input_type": "name"
    }
  ]
}
